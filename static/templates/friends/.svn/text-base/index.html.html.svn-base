{% extends 'base.html' %}
{% load prettyuser %}

{% block js %}
$(function() {
  get_friends({'page': 1});
  $('#id_term').keyup(function() {
    var input = $(this);
    clearTimeout(input.data('timeout'));
    input.data('timeout', 
            setTimeout(function() {
                get_friends({'term': input.val(), 'page': 1});
                },
                300));
  });
});
{% endblock %}


{% block content %}

<input type="text" id="id_term" />
<div id="friends">
</div>
{% endblock %}
{% extends "base.html" %}
{% load prettyuser %}

{% block title %}
Pagina lui {{user|user_or_name}} - Fingo.ro
{% endblock %}


{% block content %}
<img src="{{user.get_profile.photo.url}}" width="80" />
<h1>{{user|only_name}}</h1>
<h3>{{user.username}}</h3>
<br/>

{% if not is_my_friend %}
<div id="add_as_friend"> <a href="#" onclick="add_friend({{user.id}});">Adauga ca prieten </a></div>
{% endif %}

<div id="add_news_form_toggle"> <a href="#" onclick="return false;"> Adauga o barfa despre {{user|user_or_first_name}}</a></div>
<form method="GET" action="{% url news-add_inline %}" enctype="multipart/form-data" id="add_news_form">
  {% csrf_token %}
  
  {{form.anonymous.label_tag}} {{form.anonymous}}
  {{form.title.label_tag}} {{form.title}}
  {{form.text.label_tag}} {{form.text}}
  {{form.about_id}}
  <div id="add_news_form_image_toggle"><a href="#" onclick="return false;">Adauga imagini</a></div>
  <div id="add_news_form_image">
     <input type="file" name="images" id="multi-image" />
  </div>

  <div id="add_news_form_video_toggle"><a href="#" onclick="return false;">Adauga un video</a></div>
  <div id="add_news_form_video">
    {{form.video}}
  </div>
  <div id="add_news_form_cancel"><a href="#"> renunta </a></div>
  <div id="add_news_form_submit"><a href="#"> adauga </a></div>
</form>
<div id="result_success"> Am adaugat vestea </div>
<div id="result_fail"> Vestea ta nu contine nimic </div>
<br/><br/><hr/>

{% for n in news %}
{% if n.anonymous %}
<strong> Anonim </strong> a zis:
{% else %}
  {% if n.user.id == user.id %}
  <strong> Tu </strong> ai zis:
  {% else %}
  <a href="{% url profile-view n.user.username %}">
    {{n.user|user_or_name}}
  </a>
  a zis:
  {% endif %}
{% endif %}
<br/><br/>
{{ n.title }} <br/>
{{ n.text }}

{% if n.video %}
<a href="{{n.video}}">Vezi video</a>
{% endif %}

{% for image in n.images %}
<img src="{{ image.image.thumbnail.url }}" width="70px" alt="poza"/>
{% endfor %}

{{ n.time }}

<hr/>
{% endfor %}


{% endblock %}
{% load prettyuser %}
{% load prettytime %}
{% load prettylink %}

{% if has_more %}
ultimele comentarii despre această bârfă...
<a href="#" onclick="get_comments({{news_id}}, true); return false;" id="comments_show_all">Arată-mi-le pe toate</a>
<br class="clear"/>
{% endif %}

{% for c in comments %}
<div class="comm">
  <div class="comm_poza">
    <a href="{% url profile-view c.user.username %}">
      <img src="{{c.user.get_profile.photo.thumbnail.url}}" title="{{c.user|user_or_name}} poza"/>
    </a>
  </div>
  <div class="comm_text_show">
    <div class="dialog-open"></div>
    <span class="comm_username">
    <a  href="{% url profile-view c.user.username %}">{{c.user|user_or_name}}</a>
    </span>
    <span class="text"> 
      {{c.text|urlizetrunc:25|url_target_blank|linebreaksbr}}
    </span>
    <div class="info">{{c.time|default_time}}</div>    
  </div>
</div>

{% endfor %}
<div class="clear"></div>

{% extends "base.html" %}
{% load prettyuser %}

{% block title %}
Fingo.ro - Pagina principala
{% endblock %}

{% block js %}
$(function() {
get_news({'filter': 0, 'comments': false});
});
{% endblock %}

{% block content %}
{% if user.is_authenticated %}
    {% if notif.msg %}
    <a href="#"> Ai un mesaj privat nou </a>
    {% endif %}
    {% if notif.friend_req %}
    <a href="{% url friends-index %}"> Vezi cine vrea sa fie prieten cu tine </a>
    {% endif %}
    {% if notif.new_gossip_me %}
    <a href="{% url profile-index %}"> Te-a barfit cineva. Vezi cine. </a>
    {% endif %}
{% endif %}

<div class="continut">
  <div id="left">
    {% if user.is_authenticated %}
      Vezi doar barfele <a href="{% url profile-index %}">relevante</a> pentru tine.
    {% else %}
      <a href="{% url profile-login %}">Conecteaza-te</a> la reteaua noastra ca sa afli barfele relevante pentru tine.
    {% endif %}
    <h3>Ultimii inregistrati</h3>
    {% for user in latest_users %}
    <a href="{% url profile-view user.username %}" class="img_profil"><img src="{{user.get_profile.photo.url}}" /></a>
    {% endfor %}
    <div class="clear"></div>
    <br/>
    <h3>Cei mai barfiti</h3>
    {% for user in best_users %}
    <a href="{% url profile-view user.username %}" class="img_profil"><img src="{{user.get_profile.photo.url}}" /></a>
    {% endfor %}
    <div class="clear"></div>
  </div>

  <div id="middle{% if user.is_authenticated %}2{% else %}1{% endif %}">
    <div id="news_top">
    </div>
    <a href="#"
       onclick="get_news_append({'filter': news_filter, 'page': news_page + 1, 'perpage': news_perpage, 'comments': true});return false;">
      Mai multe
    </a>
  </div>

  {% if not user.is_authenticated %}
  <div id="right">
    <a href="{% url profile-login %}" id="connect_fb">&nbsp;</a>
    <br /><br />
    <a href="{% url news-add %}"><img src="{{MEDIA_URL}}images/scrie_barfe.jpg" alt="Scrie barfe" title="Scrie barfe" /></a>
    <br /><br />
    <p class="titlu">Ai o <strong>barfa</strong> calda?<br/>
      Aici ai sansa sa o faci publica. <br />
      Este mult prea calda? <br/>
      Foloseste modul <strong>anonim</strong> !</p>
  </div>
  {% endif %}

</div>
<div id="footer">
    <span class="style8">&copy;Fingo <img src="images/stea.jpg" alt="" title=
    "" /> <a href="#" title="Blog">Blog</a> <img src="images/stea.jpg" alt=""
    title="" /> <a href="#" title="Despre Fingo">Despre fingo</a> <img src=
    "images/stea.jpg" alt="" title="" /> <a href="#" title=
    "Termeni si conditii" class="style9">Termeni si conditii</a></span>
</div>
{% endblock %}
